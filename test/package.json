{
  "name": "taobei-integration-tests",
  "version": "1.0.0",
  "description": "淘贝App集成测试套件",
  "type": "module",
  "scripts": {
    "test": "jest --verbose --bail --forceExit",
    "test:integration": "jest test/integration --verbose --bail --forceExit",
    "test:e2e": "jest test/e2e --verbose --bail --forceExit",
    "test:all": "jest --verbose --bail --forceExit --runInBand"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "puppeteer": "^21.5.0"
  },
  "jest": {
    "testTimeout": 30000,
    "bail": 1,
    "verbose": true,
    "forceExit": true,
    "detectOpenHandles": true,
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".js"],
    "transform": {},
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverage": false,
    "maxWorkers": 1
  }
}